<Window x:Class="Avantick.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Avantick - Login" Width="380" Height="240" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Usuario:" Margin="0,0,0,4"/>
            <TextBox Text="{Binding User, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="ContraseÃ±a" Margin="0,0,0,4"/>
            <PasswordBox x:Name="Pwd"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Ingresar" Padding="8,4"
                HorizontalAlignment="Right"
                Click="OnLoginClick"/>
    </Grid>
</Window>
